{% spaceless %}
    <section data-active="yes" class="welcome">
        <div class="header">
            {% image '@DeepMikotoApiBundle/Resources/public/images/deepmikoto_logo_120.png' output='images/logo_w_120.png' %}
            <img src="{{ asset_url }}" alt="deepmikoto" title="Hi there!"/>
            {% endimage %}
        </div>
        <div class="scroll-indicator-container">
            <div class="scroll-indicator" title="Scroll! :)">
                <i class="glyphicon glyphicon-triangle-bottom"></i>
                <i class="glyphicon glyphicon-triangle-bottom"></i>
                <i class="glyphicon glyphicon-triangle-bottom"></i>
            </div>
        </div>
        <div class="slices-container">
            <div class="top-slice">
                <h1>Hi there</h1>
            </div>
            <div class="middle-slice">
                <video loop="" id="bgvid">
                    <source src="{{ asset('bundles/deepmikotoapi/videos/a_walk_in_time.mp4') }}" type="video/mp4">
                </video>
                <div class="video-overlay"></div>
                <div class="bottom-shadow"></div>
            </div>
            <div class="bottom-slice">
                <h4>You made it</h4>
                <p>
                    Since you're here, it's time to start exploring
                </p>
            </div>
        </div>
    </section>
    <section class="coding">
        <div class="section-content text-center">
            <div class="container">
                <h1>Coding</h1>
                <h3>Tutorials, Guides, How Tos</h3>
                <a href="{{ path('deepmikoto_app_coding') }}" class="btn btn-info">explore</a>
            </div>
        </div>
    </section>
    <section class="gaming">
        <div class="section-content text-center">
            <div class="container">
                <h1>Gaming</h1>
                <h3>Walkthroughs, Game Guides, Maps and more!</h3>
                <a href="{{ path('deepmikoto_app_gaming') }}" class="btn btn-info">explore</a>
            </div>
        </div>
    </section>
    <section class="photography">
        <div class="section-content text-center">
            <div class="container">
                <h1>Photography</h1>
                <h3>Free Stock Images & Wallpapers</h3>
                <a href="{{ path('deepmikoto_app_photography') }}" class="btn btn-info">explore</a>
            </div>
        </div>
    </section>
{% endspaceless %}